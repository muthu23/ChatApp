<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">
        <shape android:dither="true" android:shape="oval" android:useLevel="false" android:visible="true">
            <solid android:color="@color/switch_thumb_color_disabled" />
            <corners android:radius="@dimen/_50sdp" />
            <size android:width="@dimen/_25sdp" android:height="@dimen/_25sdp" />
            <!--I used stroke as padding to make thumb look like small and inside track-->
            <stroke android:width="@dimen/_4sdp" android:color="#0000ffff" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:dither="true" android:shape="oval" android:useLevel="false" android:visible="true">
            <solid android:color="@color/switch_thumb_color" />
            <corners android:radius="@dimen/_50sdp" />
            <size android:width="@dimen/_25sdp" android:height="@dimen/_25sdp" />
            <!--I used stroke as padding to make thumb look like small and inside track-->
            <stroke android:width="@dimen/_4sdp" android:color="#0000ffff" />
        </shape>
    </item>

</selector>